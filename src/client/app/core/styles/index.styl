body, html
  width      : 100%
  height     : 100%
  margin     : 0
  padding    : 0
  // background : #f1f1f1


body
  padding:10px
  background-color:#2C3E50
  *
    box-sizing : border-box

.navbar
  background-color:#ECF0F1
  border: 1px solid
  border-color:#3498DB
  padding:10px
  border-radius:4px

.content
  background-color:#ECF0F1
  border: 1px solid
  border-color:#3498DB
  padding: 10px 20px
  border-radius:4px


.title
  flex       : 1 0 auto
  background : #ffffff
  padding    : 40px

.current-routes-list > h3
  text-decoration: underline

.method-body
  background-color:#2980B9
  border: 1px solid
  padding:5px
  border-radius:4px

  & > h1
    display    : flex
    margin     : 0
    line-height: 0
    font-size  : 100px
    text-align : center
    color      : #444444
    align-items: center
    justify-content: center



.add-routes
  border : solid black 1px
  padding : 10px 0px 30px 40px
  border-radius: 15px
  margin-bottom: 15px

.current-routes
  border : solid black 1px
  padding : 10px 0px 30px 40px
  border-radius: 15px

.edit-routes
  border : solid black 1px
  padding : 10px 30px 30px 40px
  border-radius: 15px





